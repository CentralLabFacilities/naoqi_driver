<launch>

    <arg name="nao_ip" default="$(optenv NAO_IP)"/>
    <arg name="nao_port" default="$(optenv NAO_PORT 9559)"/>
    <arg name="roscore_ip" default="127.0.0.1"/>
    <arg name="network_interface" default="eth0"/>
    <arg name="namespace" default="naoqi_driver"/>
    <!-- This one is optional, you can add it using --config_file -->
    <!--<arg name="config_file" default="/path/to/some/boot_config.json"/>-->

    <node pkg="naoqi_driver" type="naoqi_driver_node" name="$(arg namespace)"
          required="true"
          args="--qi-url=tcp://$(arg nao_ip):$(arg nao_port) --roscore_ip=$(arg roscore_ip) --network_interface=$(arg network_interface) --namespace=$(arg namespace)"
          output="screen"/>

</launch>
